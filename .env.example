# ===========================================
# BYTEPLUS PHOTOBOOTH ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=5000
WATERMARK_POSITION=top-right  # atau top-left / bottom-right / bottom-left

# BASE_URL digunakan untuk generate link/QR code pada hasil photobooth
# Set ke domain produksi Anda (tanpa path /uploads)
# PUBLIC_BASE_URL=https://your-domain.example.com
# NODE_ENV=production

# ===========================================
# STORAGE PROVIDER DEFAULTS
# ===========================================
STORAGE_PROVIDER=local
ENABLE_LOCAL_STORAGE=true
ENABLE_FTP_STORAGE=false
ENABLE_NEXTCLOUD_STORAGE=false
ENABLE_GOOGLE_DRIVE_STORAGE=false

# Provider utama (pilihan: local, ftp, nextcloud, google-drive)
# Jika dikosongkan maka otomatis pakai provider aktif pertama
PRIMARY_STORAGE_PROVIDER=local

# Simpan salinan lokal walaupun upload jarak jauh berhasil
KEEP_LOCAL_COPY=true
# Direktori lokal untuk menyimpan file hasil
UPLOAD_BASE_DIR=./public/uploads
# Direktori sementara (untuk watermark, dll.)
FTP_TEMP_DIR=./.tmp/uploads
# Lokasi watermark default
WATERMARK_FILE_PATH=./public/BytePlus.png

# ===========================================
# OPTIONAL: FTP SERVER CONFIGURATION
# ===========================================
# ENABLE_FTP_STORAGE=true
# STORAGE_PROVIDER=ftp
# FTP_HOST=ftp.example.com
# FTP_USER=your_ftp_username
# FTP_PASSWORD=your_ftp_password
# FTP_PORT=21
# FTP_REMOTE_PATH=/path/to/remote/folder/
# FTP_DISPLAY_URL=https://your-public-url/

# ===========================================
# LIGHTX STUDIO API CONFIGURATION
# ===========================================
# API Key untuk LightX Studio AI processing
# LIGHTX_API_KEY=your_lightx_api_key_here

# ===========================================
# GOOGLE GEMINI AI CONFIGURATION
# ===========================================
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# OPTIONAL: NEXTCLOUD CONFIGURATION
# ===========================================
# STORAGE_PROVIDER=nextcloud
# NEXTCLOUD_SERVER_URL=....
# NEXTCLOUD_USERNAME=...
# NEXTCLOUD_PASSWORD=...
# NEXTCLOUD_WEBDAV_ROOT=..........
# NEXTCLOUD_BASE_FOLDER=......
# NEXTCLOUD_GIF_FOLDER=..

# ===========================================
# OPTIONAL: GOOGLE DRIVE CONFIGURATION
# ===========================================
# STORAGE_PROVIDER=google-drive
# GOOGLE_DRIVE_CLIENT_EMAIL=service-account@project.iam.gserviceaccount.com
# GOOGLE_DRIVE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# Atau gunakan file/JSON service account
# GOOGLE_DRIVE_SERVICE_ACCOUNT_FILE=./config/service-account.json
# GOOGLE_DRIVE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}
# GOOGLE_DRIVE_BASE_FOLDER_ID=your_base_folder_id
# GOOGLE_DRIVE_GIF_FOLDER_ID=your_gif_folder_id
# GOOGLE_DRIVE_SHARE_WITH_ANYONE=true
# GOOGLE_DRIVE_IMPERSONATE_EMAIL=user@domain.com
# GOOGLE_DRIVE_USE_SHARED_DRIVE=false
# GOOGLE_DRIVE_SHARED_DRIVE_ID=shared_drive_id
# ===========================================
# OPTIONAL: FRONTEND DEBUG LOGS
# ===========================================
# Set true untuk menampilkan log detail di browser
# VITE_DEBUG_LOGS=true

# ===========================================
# OPTIONAL: DATABASE CONFIGURATION
# ===========================================
# Jika menggunakan database (opsional)
# DATABASE_URL=your_database_url_here

# ===========================================
# OPTIONAL: REDIS CONFIGURATION
# ===========================================
# Jika menggunakan Redis untuk caching (opsional)
# REDIS_URL=your_redis_url_here

# ===========================================
# OPTIONAL: LOGGING CONFIGURATION
# ===========================================
# Level logging (debug, info, warn, error)
# LOG_LEVEL=info

# ===========================================
# OPTIONAL: SECURITY CONFIGURATION
# ===========================================
# JWT Secret untuk authentication (jika diperlukan)
# JWT_SECRET=your_jwt_secret_here

# ===========================================
# OPTIONAL: EMAIL CONFIGURATION
# ===========================================
# Jika menggunakan email notification (opsional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_email_password
# FROM_EMAIL=your_email@gmail.com

# ===========================================
# OPTIONAL: CLOUD STORAGE CONFIGURATION
# ===========================================
# Jika menggunakan cloud storage selain FTP (opsional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your_s3_bucket_name

# ===========================================
# OPTIONAL: MONITORING CONFIGURATION
# ===========================================
# Jika menggunakan monitoring service (opsional)
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_newrelic_key_here
